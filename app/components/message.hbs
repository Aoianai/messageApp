<article class="messages">

  <Message::Avatar
    @title="{{@username}}'s avatar"
    @initial={{substring @username start=0 end=1}}
    @isCurrentUser={{@isCurrentUser}}
    class="{{if @isCurrentUser true}}"
  />

  <section>
    <Message::Username
      @name={{@username}}
      @localTime={{@userLocalTime}}
    />
  </section>

</article>